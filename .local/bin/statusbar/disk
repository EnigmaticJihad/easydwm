#!/bin/bash

# Prints out the total disk memory and the availeable memory

#PREFIX='פּ '
PREFIX=' '
get_disk()
{
    TOTAL_SIZE=$( df -h /home | tail -1 | awk {'printf $2'})
    USED_SIZE=$(df -h /home | tail -1 | awk {'printf $3'})
    PERCENTAGE=$(df -h /home | tail -1 | awk {'printf $5'})

    echo "$PREFIX$USED_SIZE/$TOTAL_SIZE ($PERCENTAGE)"
}

get_disk
